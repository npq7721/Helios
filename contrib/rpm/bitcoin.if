
## <summary>policy for helios</summary>


########################################
## <summary>
##	Transition to helios.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`helios_domtrans',`
	gen_require(`
		type helios_t, helios_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, helios_exec_t, helios_t)
')


########################################
## <summary>
##	Execute helios server in the helios domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`helios_initrc_domtrans',`
	gen_require(`
		type helios_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, helios_initrc_exec_t)
')


########################################
## <summary>
##	Search helios lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`helios_search_lib',`
	gen_require(`
		type helios_var_lib_t;
	')

	allow $1 helios_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read helios lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`helios_read_lib_files',`
	gen_require(`
		type helios_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, helios_var_lib_t, helios_var_lib_t)
')

########################################
## <summary>
##	Manage helios lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`helios_manage_lib_files',`
	gen_require(`
		type helios_var_lib_t;
	')

	files_search_var_lib($1)
	manage_files_pattern($1, helios_var_lib_t, helios_var_lib_t)
')

########################################
## <summary>
##	Manage helios lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`helios_manage_lib_dirs',`
	gen_require(`
		type helios_var_lib_t;
	')

	files_search_var_lib($1)
	manage_dirs_pattern($1, helios_var_lib_t, helios_var_lib_t)
')


########################################
## <summary>
##	All of the rules required to administrate
##	a helios environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`helios_admin',`
	gen_require(`
		type helios_t;
		type helios_initrc_exec_t;
		type helios_var_lib_t;
	')

	allow $1 helios_t:process { ptrace signal_perms };
	ps_process_pattern($1, helios_t)

	helios_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 helios_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, helios_var_lib_t)

')

